extends templates/layout

block content

  
  p Welcome to #{title}

    includes templates/layout
    html
        body
            br
            br
            #login_box.container.d-flex.justify-content-center
                #form_login.login-form.shadow.p-3.mb-5.bg-white.rounded
                    form
                        h2.text-center Log in
                        .form-group
                            label(email) Email
                            input.form-control(name='email', type='text')

                        br

                        .form-group
                            label(password) Password

                            input.form-control(name='password', type='password')

                        br

                        .form-group
                            input.btn.btn-primary.btn-block(type='submit', value='Login', formaction='/login', formmethod='POST')

