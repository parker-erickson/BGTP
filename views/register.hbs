<div class="container d-flex justify-content-center" id="login_box">
    <div class="login-form shadow p-3 mb-5 bg-white rounded" id="form_login"></div>
</div>
<div class="text-center">
    <h1>Register</h1>
    <form action="./auth/register" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" id="name" type="text" name="name" required="" />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" id="email" type="text" name="email" required="" />
        </div>
        <div class="form-group">
            <label for="phonenumber">Phone Number</label>
            <input class="form-control" id="phonenumber" type="text" name="phonenumber" required="" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" id="password" type="password" name="password" required="" />
        </div>
        <div class="form-group">
            <label for="password">Confirm Password</label>
            <input class="form-control" id="passwordConf" type="password" name="passwordConf" required="" />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form><a href="/login">Login</a>
</div>

