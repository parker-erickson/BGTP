<div class="container d-flex justify-content-center" id="login_box">
    <div class="login-form shadow p-3 mb-5 bg-white rounded" id="form_login"></div>
</div>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h1>Login</h1>
        </div>
        <div class="card-body">
            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" id="email" type="text" name="email" required="" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" id="password" type="password" name="password" required="" />
                </div>
                <button class="btn btn-primary" type="submit">Login</button>
            </form><a href="/register">register</a>
        </div>
    </div>
    {{#if bad }}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
    {{#if good }}
        <h4 class="alert alert-success mt-4">{{message}}</h4>
    {{/if}}
</div>

